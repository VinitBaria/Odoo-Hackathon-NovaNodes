<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - ReWear</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .fade-in {
            animation: fadeIn 0.5s ease-out;
        }
    </style>
</head>
<body class="bg-gradient-to-br from-green-50 to-blue-50">
    <nav class="bg-green-700 sticky top-0 z-50 shadow-lg">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <a href="/" class="text-3xl font-extrabold text-white tracking-tight">ReWear</a>
            <div class="space-x-6">
                <a href="/dashboard" class="text-white hover:text-green-200 transition">Dashboard</a>
                <a href="/logout" class="text-white hover:text-green-200 transition">Logout</a>
            </div>
        </div>
    </nav>
    <div class="container mx-auto px-4 py-12">
        <h1 class="text-4xl font-bold text-gray-800 mb-6 fade-in">Admin Panel</h1>
        <h2 class="text-2xl font-bold text-gray-800 mb-4 fade-in">Item Moderation</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 fade-in">
            <% items.forEach(item => { %>
                <div class="bg-white rounded-lg shadow-lg overflow-hidden transform hover:scale-105 transition">
                    <img src="<%= item.images[0] %>" alt="<%= item.title %>" class="w-full h-64 object-cover">
                    <div class="p-4">
                        <h3 class="text-xl font-semibold text-gray-800"><%= item.title %></h3>
                        <p class="text-gray-600">Status: <%= item.status %></p>
                        <p class="text-gray-600">Uploader: <%= item.userEmail %></p>
                        <% if (item.status === 'pending') { %>
                            <div class="flex space-x-4 mt-4">
                                <form action="/admin/approve/<%= item.id %>" method="POST">
                                    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-full hover:bg-green-700 transition">Approve</button>
                                </form>
                                <form action="/admin/reject/<%= item.id %>" method="POST">
                                    <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-full hover:bg-red-700 transition">Reject</button>
                                </form>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>